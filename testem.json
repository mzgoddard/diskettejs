{
  "framework": "mochi",
  "src_files": [ "index.js", "src/*.js", "test/test*.js" ],
  "serve_files": [
    "dist/*",
    "test/**/*",
    "testdist/**/*"
  ],
  "test_page": "test/index.html",
  "before_tests": "grunt webpack && test/after.js && test/before.js",
  "on_exit": "test/after.js",
  "launchers": {
    "Mocha": {
      "command": "node_modules/.bin/mocha -R tap -u qunit test/test*.js",
      "protocol": "tap"
    }
  },
  "launch_in_ci": [ "chrome", "firefox", "Opera" ],
  "launch_in_dev": [ "chrome" ]
}
